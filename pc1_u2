package practica1;

import java.util.Scanner;

/**
 *
 * @author invitado
 */
public class Practica1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
       /**determinar factorial N
        * sumar factorial N
        * Compilar codigo
        * se calcula factorial de n numero ingresado
        * (completar codigo)
        */ 
        int N;
        double factorial,suma=0;
        Scanner sc = new Scanner(System.in);
        //leer numero entero >=0
        do(
                
                )
                N=sc.nextInt();
        while(N<0);
        for(int i=0;i<=N;i++);
        //para cada numero desde 1 hasta n
        
        factorial=1;
        for(int j=1;j<=i;j++){
        factorial=factorial*j;
        }
        
        System.out.println(String.format("%n%2d!=%.0f%n",i,factorial));
        
        //se suma actorial
        suma=suma+factorial;
    
        System.out.println("suma de los factoriales desde cero hasta %d;%0.f&n");
        
        
    }
    /*
    
    */
}
